{
  "name": "bms-monitor",
  "version": "0.3.0",
  "description": "An Electron application with Svelte and TypeScript",
  "main": "./out/main/index.js",
  "author": "Jack Hsieh",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run typecheck:node && pnpm run svelte-check",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "rebuild:64": "cd node_modules/serialport && node-pre-gyp rebuild --target=21.3.0 --arch=x64 --dist-url=https://atom.io/download/atom-shell"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.2",
    "@electron-toolkit/utils": "^1.0.2",
    "d3-quadtree": "^3.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "layercake": "^7.1.0",
    "modbus-serial": "^8.0.8",
    "nodemailer": "^6.8.0",
    "serialport": "^10.5.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@electron/rebuild": "^3.2.10",
    "@iconify/icons-heroicons": "^1.2.5",
    "@iconify/svelte": "^3.0.1",
    "@sveltejs/vite-plugin-svelte": "^1.2.0",
    "@types/node": "16.11.22",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "autoprefixer": "^10.4.13",
    "daisyui": "^2.46.0",
    "electron": "^21.3.0",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.14",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.20",
    "prettier": "^2.7.1",
    "svelte": "^3.53.1",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.2.4",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vite": "^3.2.4"
  }
}
